{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ entity.bio }}</td>
            </tr>
            <tr>
                <th>Productinfo</th>
                <td>{{ entity.productInfo }}</td>
            </tr>
            <tr>
                <th>Attending</th>
                <td>{{ entity.attending }}</td>
            </tr>
            <tr>
                <th>Confirmed</th>
                <td>{{ entity.confirmed }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>
{% endblock %}
