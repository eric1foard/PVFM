{% extends 'base.html.twig' %}

{% block body %}

<header>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">

				<img class="featurette-image img-circle" src="{{ asset('bundles/app/img/tractor.png') }}" width="25%">
				
				<div class="intro-text">
					<span class="name"><h4>Welcome, {{app.user.username}}</h4></span>
					
				</div>
			</div>
		</div>
	</div>
</header>

<!-- Portfolio Grid Section -->
<section>
	

	<div class="intro-text">
					<span><h2>Manage Vendors</h2></span>
					
				</div>

	<!-- Table start -->

	<div class="col-lg-12">
		<div class="table-responsive">
			<table id="vendors_table" class="table table-striped table-hover" cellspacing="0" data-click-to-select="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true">
				<thead>
					<tr>
						<th data-field="username" data-sortable="true">Username</th>
						<th data-field="email">Email</th>
						<th data-field="actions">Actions</th>


					</tr>
				</thead>
				<tbody>
					{% for user in users %}
					<tr>
						<td>{{user.username}}</td>
						<td>{{user.email}}</td>
						<td>

							<div class="btn-group">
								<a href="#" class="btn btn-med btn-warning">Edit</a>
								<a href="#" class="btn btn-med btn-danger">Delete</a>
							</div>

						</td>

					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<!-- /.table-responsive -->
	</div>
</section>

<script>
	$(document).ready(function () {
		$('#vendors_table').dataTable({
			"pagingType": "full_numbers",
			"scrollX": "false",
		});
	});
	</script>
{% endblock %}
